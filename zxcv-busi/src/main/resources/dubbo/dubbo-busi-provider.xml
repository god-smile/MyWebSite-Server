<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用名称信息，这个相当于起一个名字，我们dubbo管理页面比较清晰是哪个应用暴露出来的 -->
    <dubbo:application name="${spring.dubbo.application.name}"></dubbo:application>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="${spring.dubbo.registry.address}" check="false" subscribe="false" register=""></dubbo:registry>

    <dubbo:monitor protocol="registry"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${spring.dubbo.registry.port}"/>


    <!--####################payinner dubble 配置######################################################### -->


    <!-- 用户 -->
    <dubbo:service interface="com.zxcv.api.commom.service.sys.TsOpService" version="${spring.dubbo.provider.version}"
                   timeout="10000" retries="3" loadbalance="random"
                   ref="com.zxcv.busi.biz.sys.TsOpServiceImpl" />

    <!-- 用户 -->
    <dubbo:service interface="com.zxcv.api.commom.service.sys.UserInfoService" version="${spring.dubbo.provider.version}"
                   timeout="10000" retries="3" loadbalance="random"
                   ref="com.zxcv.busi.biz.sys.UserInfoServiceImpl" />
                   
    <!-- 客户-测试 -->
    <dubbo:service interface="com.zxcv.api.commom.service.sys.TestCustService" version="${spring.dubbo.provider.version}"
                   timeout="10000" retries="3" loadbalance="random"
                   ref="com.zxcv.busi.biz.sys.TestCustServiceImpl" />
                   
    <!-- 新闻 -->
    <dubbo:service interface="com.zxcv.api.commom.service.site.NewsInfoService" version="${spring.dubbo.provider.version}"
                   timeout="10000" retries="3" loadbalance="random"
                   ref="com.zxcv.busi.biz.site.NewsInfoServiceImpl" />

</beans>
